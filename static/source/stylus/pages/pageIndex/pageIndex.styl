          width 356px
          height 38px
          box-shadow none
          text-shadow none
          padding-left 83px
          line-height 38px
          position relative
          border 1px solid #dfdfdf

          &:before
            position absolute
            top 0
            left 0
            content ""
            width 61px
            height 38px
            background #f8f7f6

          &:after
            position absolute
            content ""
            sprite($icon_arrow_right)
            top 11px
            left 19px

          .jq-selectbox__select-text
            font-size 16px
            color #8c8c8c
            font-family $f_elektra
          .jq-selectbox__trigger
            border 0
            .jq-selectbox__trigger-arrow
              sprite($icon_arrow_bottom_s)
              top 17px
              width 10px
              height 7px
              border 0
        .jq-selectbox__dropdown
          ul
            li
              display  list-item
      & > div:first-child
        float left
        width 50%
      & > div:last-child
        float left
        width 50%
        .jq-selectbox
          margin-left 15px
