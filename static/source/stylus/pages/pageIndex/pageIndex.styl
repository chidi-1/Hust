          .title
            font-size 16px
            padding 13px 0 0 17px
            color #8c8c8c
            float left
            text-transform none
          ul
            float left
            margin-left 12px
            li
              float left
              margin 0 6px
              a
                width 40px
                height 40px
                display block
                border-radius 40px
                position relative

                &.active:before
