#advice
  .title
    font-size 28px
    text-transform uppercase
    text-align center
    color #808080
  .line
    border-top 1px solid #e2e0dd
    margin 22px 0
  form
    position relative
    .search
      width 910px
      height 42px
      padding 0 10px 0 80px
      border 1px solid #dfdfdf
      border-radius 3px

    .icon_search
      position absolute
      top 1px
      left 1px
      padding 0
      border 0
      outline none
      background-color #f8f7f6
      width 62px
      height 41px

    .icon_search:after
