
#slider
  max-width 1910px
  margin 0 auto 72px

  .slider_block
    *
      outline 0
    .slick-slide
      text-align center
      & > div
        width 100%
        overflow hidden
        position relative
        & > img
          height 100%
          position relative
          top 0
          left 50%
          margin-left -956px
        .content
          position absolute
          top 50%
          left 50%
          margin-left -583px
          margin-top -73px
          width 1166px
          height 146px
          border 3px solid #ffffff
          text-align center
          .blur
            position relative
            width 100%
            height 100%
            .blur_img
              position absolute
              top 0
              left 0
              width 100%
              height 100%
              background url("../images/slider_1.jpg") no-repeat center center
              filter blur(5px)
          .text
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            img
              padding-top 45px
              display inline-block
    .slick-dots
      text-align center
      position absolute
      bottom -65px
      width 100%

      li
        width 24px
        height 24px
        border-radius 24px
        border 3px solid #ceccc6
        display inline-block
        margin 0 15px
        vertical-align top
        position relative
        cursor pointer

        button
          display none

        &.slick-active:before
          content ""
          top 3px
          left 3px
          display block
          width 12px
          height 12px
          background #e2e0dd
          border-radius 12px
          margin 6px auto 0
    .slick-prev
      width 84px
      height 600px
      background rgba(255, 255, 255, 0.7) url("../images/lerft.png") no-repeat 20px center
      float left
      cursor pointer
      border 0
      padding 0
      position absolute
      z-index 2
      top 56px
      left 0

      @media md
        display none !important

      &:hover
        background rgba(255, 255, 255, 0.7) url("../images/lerft.png") no-repeat -57px center
    .slick-next
      width 84px
      height 600px
      background rgba(255, 255, 255, 0.7) url("../images/right.png") no-repeat 30px center
      float left
      cursor pointer
      border 0
      padding 0
      position absolute
      z-index 2
      top 56px
      right 0

      @media md
        display none !important

      &:hover
        background rgba(255, 255, 255, 0.7) url("../images/right.png") no-repeat -48px center
