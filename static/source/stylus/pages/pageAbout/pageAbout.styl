.about
  padding-top 5px

  .title
    display block
    font-family $f_pfdin
    font-size 28px
    color #808080
    text-transform uppercase
    text-decoration underline
    margin-bottom 14px
    padding-bottom 17px
    border-bottom 1px solid #e4e1de

  .about-form
    padding-top 9px

    .grid
      margin-left -20px

      label.grid-item
        display inline-block
        vertical-align top
        margin-left 19px
        width 490px
        position relative
        margin-bottom 19px

        span
          position absolute
          text-align left
          top 1px
          left 1px
          bottom 1px
          background #f8f7f7
          border-radius 5px 0 0 5px
          width 140px
          padding-left 14px
          line-height 41px

        .inp
          width 490px
          font-size 16px
          color #8c8c8c
          font-family $f_elektra

        .inp::placeholder
          opacity 1
          font-size 16px
          font-family $f_elektra
          color #c7c7c7
          font-style italic

        .inp:focus::placeholder
          opacity 0