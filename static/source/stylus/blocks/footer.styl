.psevdofooter
  display block
  height 96px

footer
  position absolute
  left 0
  right 0
  bottom 0

  .hover_menu
    position fixed
    width 100%
    bottom -373px
    z-index 100
  .arrow
    padding 20px 0
    .arrow-icon
      width 27px
      height 10px
      sprite($icon_arrow_bottom)
      margin 0 auto
      cursor pointer

      &.active
        sprite($icon_arrow_top)
  .menu
    min-height 48px
    background #e9e9e9
    ul
      li
        float left
        width 25%
        margin-top 16px
        a
          color #4b4b4b
          text-transform uppercase
          padding-left 15px
          &:hover
            color #000000
        &:first-child a
          padding-left 0
  .footer_menu
    min-height 345px
    background #f2f2f2
    border-top 23px solid #fff

    .wrapper
      & > div > ul
        & > li
          line-height 35px
          & > a
            color #4b4b4b
            text-decoration underline
            &:hover
              color #000000
              font-weight bold
          .boldfont
            font-weight bold
    .mesh25
      width 25%
      float left
      padding-top 16px
      height 331px

      ul
        li
          display block
    .two
      background #e9e9e9
      ul
        padding-left 15px
    .three
      ul
        padding-left 15px
    .forth
      background #e9e9e9
      text-align center
      & > a
        font-size 23px
        margin 75px 0 71px
        display inline-block
      .line
        width 228px
        margin 0 auto
        border-bottom 1px solid #e2e0dd
      .society
        .title
          padding-top 13px
          font-size 16px
          font-family $f_elektra
          color #4b4b4b
          text-transform uppercase
        ul
          text-align center
          li
            display inline-block
            vertical-align top
            margin 14px 3px
            a
              width 32px
              height 32px
              display block

            &:first-child
              a
                sprite($icon_sodical_pin)
            &:nth-child(2)
              a
                sprite($icon_sodical_vk)
            &:nth-child(3)
              a
                sprite($icon_sodical_fb)
            &:nth-child(4)
              a
                sprite($icon_sodical_in)
